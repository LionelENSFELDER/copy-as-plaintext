{
  "manifest_version": 2,

  "name": "Copy as plaintext to clipboard",
  "description": "Copy selected text as plaintext to clipboard",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["events.js"],
    "persistent": false
  },
  "permissions": [
   "activeTab",
   "contextMenus",
   "clipboardRead",
   "clipboardWrite",
   "tabs"
   ],
   "icons": {
    "16": "icon.png"
  }
}